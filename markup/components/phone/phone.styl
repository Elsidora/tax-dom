.phone
	display -webkit-flex
	display -ms-flex
	display flex
	justify-content: space-between;
	align-items: center;
	margin-left auto
	&__btn
		display inline-block
		vertical-align top
		padding-left 42px
		padding-right 42px
		font-size 1.8rem
		line-height 3.6rem
		border 3px solid $form-btn
		border-radius 20px
		cursor pointer
		@media (max-width: 1055px)
			padding-left 22px
			padding-right 22px
		@media (max-width: 930px)
			display none
		&:hover
			border-color $yellow
	&__number
		display inline-block
		vertical-align top
		width 162px
		height 16px
		margin-right 40px
		background-image url(%=static=%minified-svg/phone.svg)
		background-repeat no-repeat
		@media (max-width: 1036px)
			margin-right 20px
			