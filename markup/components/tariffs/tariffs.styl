.tariffs
	background-image url(%=static=%general/bg2_650.jpg)
	background-repeat: no-repeat
	background-size cover
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
		flex-direction column
		justify-content: space-between;
		min-height 650px
		padding-top 40px
	&__list
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		border 3px solid $white
		border-radius 30px
		overflow: hidden;
		color white
		@media (max-width: 480px)
			border 2px solid $white
			border-radius 5px
			margin-bottom 10px
	&__item
		flex-grow 1
		color $dark
		font-size 1.8rem
		line-height 3.6rem
		font-weight 300
		background-color $white
		border-right 2px solid $yellow
		cursor pointer
		transition background-color .4s ease
		text-align center
		@media (max-width: 480px)
			&:not(:last-child)
				border-bottom 1px solid $black
				border-right 1px solid $black
			&:nth-child(5)
				border-right none
		@media (max-width: 414px)
			font-size 1.6rem
		@media (max-width: 375px)
			&:nth-child(4)
				border-right none
			&:nth-child(5)
				border-bottom none
		&:hover,
		&_active
			color $white
			background-color transparent
		// &:first-child
		// 	border-left none
		&:last-child
			// padding-left 60px
			border-right none
	&__wrapper
		position relative
		// flex 0 0 75%
//block tariff
.tariff-item
	display none
	&[data-name]
		background-repeat no-repeat
		background-position left bottom
	&_econom
		background-image url(%=static=%content/cars/econom.png)
		@media (max-width: 480px)
			background-size 100% 28%
		@media (max-width: 375px)
			background-size 100% 23%
		@media (max-width: 320px)
			background-size 100% 20%
	&_comfort
		background-image url(%=static=%content/cars/comfort.png)
		&[data-name]
			@media (max-width: 480px)
				background-size 100% 40%
			@media (max-width: 375px)
				background-size 100% 30%
			@media (max-width: 320px)
				background-size 100% 25%
	&_universal
		background-image url(%=static=%content/cars/universal.png)
		@media (max-width: 480px)
			background-size 100% 28%
		@media (max-width: 375px)
			background-size 100% 28%
		@media (max-width: 320px)
			background-size 100% 20%
	&_biznes
		background-image url(%=static=%content/cars/business.png)
		@media (max-width: 480px)
			background-size 100% 40%
		@media (max-width: 375px)
			background-size 100% 35%
		@media (max-width: 320px)
			background-size 100% 30%
	&_miniven
		background-image url(%=static=%content/cars/miniven.png)
		background-position center bottom
		&[data-name]
			@media (max-width: 480px)
				background-size 90% 29%
			@media (max-width: 320px)
				background-size 90% 25%
	&_microbus
		background-image url(%=static=%content/cars/microbus.png)
		background-size 850px 330px
		background-position center bottom
		&[data-name]
			@media (max-width: 480px)
				background-size 100% 30%
			@media (max-width: 320px)
				background-size 95% 25%
	&_active
		display block
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		justify-content: space-between;
		min-height 520px
	&__left-col
		width 60%
		@media (max-width: 480px)
			width 100%
	&__right-col
		display -webkit-flex
		display -ms-flex
		display flex
		flex-direction column
		justify-content: space-between;
		padding-right 50px
		@media (max-width: 825px)
			padding-right 10px
		@media (max-width: 480px)
			padding-right 0
			flex-direction row
			flex-wrap wrap
	&__title
		margin-bottom 30px
		color $white
		font-size 3rem
		line-height 3.6rem
		font-weight 300
		@media (max-width: 480px)
			margin-bottom 15px
			text-align center
		@media (max-width: 414px)
			font-size 2.5rem
	p
		color $white
		font-size 1.6rem
		line-height 2.6rem
		font-weight 300
		@media (max-width: 414px)
			font-size 1.5rem
			padding-bottom 5px
		
	&__list
		@media (max-width: 480px)
			display -webkit-flex
			display -ms-flex
			display flex
			justify-content: space-between;
			flex-basis 100%
	&__item
		padding-left 140px
		padding-bottom 30px
		color $white
		font-size 1.4rem
		line-height 3.6rem
		font-weight 300
		background-size 60px 60px
		background-repeat no-repeat
		background-position 40px 5%
		@media (max-width: 900px)
			padding-left 100px
			background-position left 5%
		@media (max-width: 480px)
			flex-basis 150px
			padding-left 0
			padding-bottom 0
			padding-top 65px
			line-height 2rem
			background-size 50px 50px
			background-position center top
			text-align center
		@media (max-width: 414px)
			background-size 45px 45px
		b
			display block
			font-size 2.4rem
			line-height 3.6rem
			font-weight 300
		&_min-price
			background-image url(%=static=%minified-svg/icon2-1.svg)
		&_min-race
			background-image url(%=static=%minified-svg/icon2-2.svg)
		&_drive-more
			background-image url(%=static=%minified-svg/icon2-3.svg)
	&__link
		align-self: center
		display inline-block
		vertical-align top
		margin-bottom 50px
		padding-left 58px
		padding-right 58px
		color $white
		font-size 1.6rem
		line-height 3.6rem
		font-weight 100
		border 3px solid $yellow
		border-radius 20px
		@media (max-width: 768px)
			margin-bottom 150px
		@media (max-width: 480px)
			margin-left calc(50% - 106px)
			margin-bottom 160px
			line-height 3.0rem	
		&:hover
			border 3px solid $white
