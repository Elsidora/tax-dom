.tariffs
	background-image url(%=static=%general/bg2.jpg)
	background-repeat: no-repeat
	background-size 100% auto contain
	&__inner
		min-height 700px
		// padding 40px
		padding-top 40px
		// padding-bottom 40px
	&__list
		display -webkit-flex
		display -ms-flex
		display flex
		// justify-content: center;
		margin-bottom 60px
		border 3px solid $white
		border-radius 30px
		overflow: hidden;
		color white
	&__item
		flex-grow 1
		color $dark
		font-size 1.8rem
		line-height 3.6rem
		font-weight 300
		background-color $white
		border-right 2px solid $yellow
		cursor pointer
		transition background-color .4s ease
		text-align center
		&:hover,
		&_active
			color $white
			background-color transparent
		// &:first-child
		// 	border-left none
		&:last-child
			// padding-left 60px
			border-right none
	&__wrapper
		position relative
		display -webkit-flex
		display -ms-flex
		display flex
		height 555px
//block tariff
.tariff-item
	display none
	opacity 0
	// position absolute
	// left 0
	// top 0
	&_econom
		background-image url(%=static=%content/cars/econom.png)
		// background-size 700px 316px
		background-repeat no-repeat
		background-position left bottom
	&_comfort
		background-image url(%=static=%content/cars/comfort.png)
		// background-size 700px 316px
		background-repeat no-repeat
		background-position left bottom
	&_universal
		background-image url(%=static=%content/cars/universal.png)
		// background-size 700px 316px
		background-repeat no-repeat
		background-position left bottom
	&_biznes
		background-image url(%=static=%content/cars/business.png)
		// background-size 700px 316px
		background-repeat no-repeat
		background-position left bottom
	&_miniven
		background-image url(%=static=%content/cars/miniven.png)
		// background-size 700px 316px
		background-repeat no-repeat
		background-position left bottom
	&_microbus
		background-image url(%=static=%content/cars/microbus.png)
		background-size 850px 330px
		background-repeat no-repeat
		background-position left bottom
	&_active
		display block
		opacity 1
		transition opacity 2s
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
	&__left-col
		width 65%
	&__right-col
		display -webkit-flex
		display -ms-flex
		display flex
		flex-direction column
		padding-top 55px
		padding-left 100px
	&__title
		margin-bottom 30px
		color $white
		font-size 3rem
		line-height 3.6rem
		font-weight 300
	p
		color $white
		font-size 1.6rem
		line-height 2.6rem
		font-weight 300
	&__list
		margin-bottom 100px
		margin-top auto
	&__item
		padding-left 140px
		padding-bottom 30px
		color $white
		font-size 1.4rem
		line-height 3.6rem
		font-weight 300
		background-size 60px 60px
		background-repeat no-repeat
		background-position 40px 5%
		b
			display block
			font-size 2.4rem
			line-height 3.6rem
			font-weight 300
		&_min-price
			background-image url(%=static=%minified-svg/icon2-1.svg)
		&_min-race
			background-image url(%=static=%minified-svg/icon2-2.svg)
		&_drive-more
			background-image url(%=static=%minified-svg/icon2-3.svg)
	&__link
		align-self: flex-end;
		display inline-block
		vertical-align top
		margin-bottom 20px
		padding-left 58px
		padding-right 58px
		color $white
		font-size 1.6rem
		line-height 3.6rem
		font-weight 100
		border 3px solid $yellow
		border-radius 20px
		&:hover
			border 3px solid $white
