.tariff-page
	&__inner
		min-height 700px
		padding 40px
		background-image url(%=static=%general/car-econom.png), url(%=static=%general/bg2.jpg)
		background-repeat: no-repeat, no-repeat
		background-size 730px 270px, cover
		background-position 50% 90%
	&__list
		display -webkit-flex
		display -ms-flex
		display flex
		justify-content: space-between;
	&__item
		padding-left 100px
		padding-bottom 30px
		color $white
		font-size 1.4rem
		line-height 3.6rem
		font-weight 300
		background-size 60px 60px
		background-repeat no-repeat
		background-position left 5%
		b
			display block
			font-size 2.4rem
			line-height 3.6rem
			font-weight 300
		&_min-price
			background-image url(%=static=%minified-svg/icon2-1.svg)
		&_min-race
			background-image url(%=static=%minified-svg/icon2-2.svg)
		&_drive-more
			background-image url(%=static=%minified-svg/icon2-3.svg)
	&__title
		margin-bottom 30px
		color $white
		font-size 3rem
		line-height 3.6rem
		font-weight 300
	p
		width 70%
		color $white
		font-size 1.6rem
		line-height 2.6rem
		font-weight 300
