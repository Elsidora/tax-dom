						+e.LI.item._min-price
							span Минимальная цена
							b #{data.tariffs[0].price[0]} &#8381;
						+e.LI.item._min-race
							span Минимальная поездка
							b #{data.tariffs[0].price[1]} км
						+e.LI.item._drive-more
							span Далее за километр
							b #{data.tariffs[0].price[2]} &#8381;
					+e.H2.title Тариф "#{data.tariffs[0].name}"
