.socials
	&__item
		display inline-block
		vertical-align top
		font-size 0
		width 50px
		height 50px
		@media (max-width: 480px)
			width 40px
			height 40px
		@media (max-width: 414px)
			width 35px
			height 35px
		@media (max-width: 320px)
			width 30px
			height 30px
		&:hover
			transform scale(1.1)
		&:not(:last-child)
			margin-right 25px
			@media (max-width: 414px)
				margin-right 20px
			@media (max-width: 375px)
				margin-right 15px
			@media (max-width: 320px)
				margin-right 10px
		&_vkontakt
			background-image: url(%=static=%minified-svg/vk.svg);
		&_facebook
			background-image: url(%=static=%minified-svg/facebook.svg);
		&_instagram
			background-image: url(%=static=%minified-svg/instagram.svg);
		&_twitter
			background-image: url(%=static=%minified-svg/twitter.svg);
		&_ok
			background-image: url(%=static=%minified-svg/okru.svg);
		&_google
			background-image: url(%=static=%minified-svg/google-plus.svg);
		&_mail
			background-image: url(%=static=%minified-svg/mail.svg);
