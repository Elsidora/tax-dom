.districts-price
	&__inner
		padding 70px 40px 0
	&__title,
	h2
		margin-bottom 20px
		font-size 3rem
		line-height 3.6rem
		font-weight 300
	p
		margin-bottom 40px
		font-size 1.4rem
		line-height 3.2rem
		font-weight 300
	&__list
		padding 0 70px
	&__item
		display -webkit-flex
		display -ms-flex
		display flex
		align-items center
		font-size 1.6rem
		line-height 1.6rem
		font-weight 300
		&:not(:last-child)
			border-bottom 1px dotted rgba(0, 0, 0, 0.2);
	span
		margin-left auto
		font-size 2.4rem
		line-height 3.2rem
		font-weight 300
