.districts-price
	&__inner
		padding-top 70px
		@media (max-width: 480px)
			padding-top 20px
	&__title,
	h2
		margin-bottom 20px
		font-size 3rem
		line-height 3.6rem
		font-weight 300
		@media (max-width: 480px)
			margin-bottom 5px
		@media (max-width: 414px)
			font-size 2.5rem
		@media (max-width: 375px)
			font-size 2.3rem
		@media (max-width: 320px)
			font-size 2.2rem
	p
		margin-bottom 40px
		font-size 1.4rem
		line-height 3.2rem
		font-weight 300
		@media (max-width: 480px)
			margin-bottom 10px
		@media (max-width: 320px)
			line-height 2rem
	&__list
		padding 0 70px
		@media (max-width: 480px)
			padding 0
	&__item
		display -webkit-flex
		display -ms-flex
		display flex
		align-items center
		font-size 1.6rem
		line-height 1.6rem
		font-weight 300
		@media (max-width: 375px)
			font-size 1.4rem
		&:not(:last-child)
			border-bottom 1px dotted rgba(0, 0, 0, 0.2);
	span
		margin-left auto
		font-size 2.4rem
		line-height 3.2rem
		font-weight 300
		@media (max-width: 414px)
			font-size 2.1rem
		@media (max-width: 375px)
			font-size 2rem
		@media (max-width: 320px)
			min-width 70px
