.transfer-airport
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		justify-content: space-between;
		padding-top 40px
	&__header
		flex-grow 1
		padding-bottom 20px
		h2
			font-size 3rem
			line-height 3.6rem
			font-weight 300
			@media (max-width: 480px)
				font-size 2.5rem
		p
			font-size 1.4rem
			line-height 3.2rem
			font-weight 300
			@media (max-width: 480px)
				line-height 2.5rem
	&__item
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		justify-content: space-between;
		align-items: center;
		align-content: space-between;
		min-height 300px
		flex-basis 48%
		padding 20px
		border-radius 5px
		@media (max-width: 768px)
			min-height 250px
			flex-basis: 100%
		@media (max-width: 414px)
			min-height 200px
		&:first-of-type
			background-image url(%=static=%content/domodevo-sheremetevo.jpg)
			background-repeat no-repeat
			background-size cover
			@media (max-width: 768px)
				margin-bottom 10px
			@media (max-width: 414px)
				background-size 410px 200px
			
		&:last-of-type
			background-image url(%=static=%content/domodedovo-vnukovo.jpg)
			background-repeat no-repeat
			background-size cover
			@media (max-width: 414px)
				background-size 410px 200px
		h3
			width 100%
			color $white
			font-size 1.8rem
			line-height 1.8rem
			font-weight 300
			span
				&:first-child
					position relative
					padding-right 40px
					&:after
						position absolute
						content ''
						right 0
						top -3px
						width 30px
						height 30px
						background-image url(%=static=%minified-svg/arrowfortarifs.svg)
						background-size 30px 30px
						background-repeat: no-repeat;
					
				&:last-child
					padding-left 20px
		b
			color $white
			font-size 3rem
			line-height 3rem
			font-weight 300
			span
				padding-left 5px
				color $yellow
	&__button
		padding 0 28px
		color $white
		line-height 3.6rem
		font-weight 300
		border 3px solid $white
		border-radius 20px
		background-color transparent
		&:hover
			border-color $yellow
