.transfer-airport
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		justify-content: space-around;
	&__header
		flex-grow 1
		h2
			font-size 3rem
			line-height 3.6rem
			font-weight 300
		p
			font-size 1.4rem
			line-height 3.2rem
			font-weight 300
	&__item
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		justify-content: space-between;
		align-items: center;
		align-content: space-between;
		flex-basis 540px
		padding 20px
		border-radius 5px
		min-height 300px
		&:first-of-type
			background-image url(%=static=%content/domodevo-sheremetevo.jpg)
			background-repeat no-repeat
		&:last-of-type
			background-image url(%=static=%content/domodedovo-vnukovo.jpg)
			background-repeat no-repeat
		h3
			width 100%
			color $white
			font-size 1.8rem
			line-height 1.8rem
			font-weight 300
			span
				&:first-child
					position relative
					padding-right 40px
					&:after
						position absolute
						content ''
						right 0
						top -3px
						width 30px
						height 30px
						background-image url(%=static=%minified-svg/arrow.svg)
						background-size 30px 30px
						background-repeat: no-repeat;
					
				&:last-child
					padding-left 20px
		b
			color $white
			font-size 3rem
			line-height 3rem
			font-weight 300
			span
				padding-left 5px
				color $yellow
	&__link
		padding 0 28px
		color $white
		line-height 3.6rem
		font-weight 300
		border 3px solid $white
		border-radius 20px
		&:hover
			border-color $yellow
