.promo
	padding-top 80px
	background-image url('%=static=%general/bg1.jpg')
	background-repeat no-repeat
	background-size cover
	background-position center
	// background-attachment: fixed;
	@media (max-width: 1024px)
		background-position 75% center
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		// align-items: stretch;
		min-height 715px
		// @media (max-width: 768px)
		// 	flex-direction column
	&__left-col
		flex-basis 45%
		@media (max-width: 768px)
			margin 0 auto
			flex-basis 70%
			padding-top 20px
		@media (max-width: 425px)
			flex-basis 100%
			padding-top 0
	&__right-col
		display -webkit-flex
		display -ms-flex
		display flex
		flex-direction column
		justify-content: center;
		flex-basis 55%
		padding-left 80px
		@media (max-width: 975px)
			padding-left 40px
		@media (max-width: 850px)
			padding-top 50px
			padding-left 15px
			justify-content: flex-start;
		@media (max-width: 768px)
			padding-top 20px
			flex-basis 100%
		@media (max-width: 480px)
			padding-top 10px
			padding-left 0
		h1
			padding-left 35px
			padding-top 100px
			color $white
			font-size 3.6rem
			line-height 7.2rem
			text-align center
			@media (max-width: 900px)
				padding-top 0
			@media (max-width: 768px)
				padding-left 0
				line-height 5rem
			@media (max-width: 375px)
				font-size 3rem
		span
			color $yellow
		p
			margin-bottom 60px
			padding-left 35px
			color $white
			line-height 3.6rem
			text-align center
			@media (max-width: 850px)
				margin-bottom 10px
			@media (max-width: 768px)
				margin-bottom 0
			@media (max-width: 480px)
				padding-left 0
				padding-bottom 5px
				line-height 2.5rem
	&__list
		display -webkit-flex
		display -ms-flex
		display flex
		align-self: center;
		@media (max-width: 850px)
			flex-direction column
		@media (max-width: 768px)
			flex-direction row
	&__item
		min-width 90px
		margin-right 50px
		padding-top 75px
		color $white
		font-size 1.6rem
		line-height 3.2rem
		text-align center
		background-size 60px 60px
		background-repeat no-repeat
		background-position 50% 5%
		@media (max-width: 975px)
			margin-right 30px
		@media (max-width: 975px)
			margin-right 10px
		@media (max-width: 768px)
			margin-right 10px
			background-size 50px 50px
			background-position 50% 15%
			line-height 2rem
		@media (max-width: 414px)
			margin-right 5px
			padding-top 65px
			background-size 45px 45px
		&:last-child
			margin-right 0
		&_order
			background-image url(%=static=%minified-svg/icon1-3.svg)
		&_sms
			background-image url(%=static=%minified-svg/icon1-1.svg)
		&_24-hours
			background-image url(%=static=%minified-svg/icon1-2.svg)
