.page-footer
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
		flex-direction column
		// justify-content flex-end
		align-items: flex-end;
		padding 60px 0px
		min-height 800px
		background-image url(%=static=%general/footer-bg.jpg)
		background-repeat no-repeat
		background-size cover
	&__right-col
		text-align center
		padding-right 70px
		.logo
			position static
			margin-bottom 60px
	&__text
		margin-bottom 80px
		color $white
		font-size 2.4rem
		line-height 4.5rem
		font-weight 300
		strong
			font-weight 300
		span
			color $yellow
	&__write-us
		display inline-block
		vertical-align top
		margin-bottom 90px
		padding 0 43px
		color $white
		font-size 1.6rem
		line-height 3.6rem
		font-weight 300
		border 3px solid #ff0
		border-radius 20px
		&:hover
			border 3px solid $white
		