.order-form
	padding-top 60px
	// padding-bottom 15px
	background rgba(255,255,255,.8)
	border-radius 10px
	@media (max-width: 1024px)
		margin-left 30px
	@media (max-width: 768px)
		margin-left 0
		padding-left 0
		padding-bottom 0
div#sedi-orderform2-fields
	border-radius 20px
	box-shadow 0 10px 9px 1px rgba(0, 0, 0, 0.15)
	border none
#sedi-notify-navbar
	display none
	@media (max-width: 414px)
		display none
	@media (max-width: 768px)
		.navbar-right
			display none
